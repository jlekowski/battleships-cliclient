{
    "name": "jlekowski/battleships-cliclient",
    "description" : "Battleships (sea battle) game - CLI Client",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BattleshipsApi\\CliClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/jlekowski/battleships-apiclient"
        }
    ],
    "require": {
        "php": ">=7.0",
        "psr/log": "^1.0",
        "symfony/console": "^3.2",
        "jlekowski/battleships-apiclient": "dev-develop",
        "donatj/cli-toolkit": "^0.1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^2.8"

    },
    "config": {
        "bin-dir": "bin"
    }
}
